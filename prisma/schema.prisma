// prisma/schema.prisma

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  phone         String?
  address       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // User role: customer (B2C), distributor (B2B), admin
  role          String    @default("customer")
  
  // B2B specific fields
  companyName   String?

  // Default shipping address info
  defaultRecipientName      String?
  defaultRecipientPhone     String?
  defaultShippingPostalCode String?
  defaultShippingAddress1   String?
  defaultShippingAddress2   String?

  cart          Cart?
  orders        Order[]
  wishlist      Wishlist[]
  reviews       Review[]
  distributorPrices DistributorPrice[]

  // Always use profile shipping address if true
  alwaysUseProfileShipping Boolean @default(false)
}

model Product {
  id            String    @id @default(cuid())
  sku           String    @unique  // Business identifier (e.g., "NIKE-001")
  name          String
  description   String
  price         Float     // B2C base price
  image         String
  category      String
  stock         Int       @default(100)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  orderItems    OrderItem[]
  cartItems     CartItem[]
  wishlist      Wishlist[]
  reviews       Review[]
  distributorPrices DistributorPrice[]
}

model Order {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Shipping address info
  recipientName      String?
  recipientPhone     String?
  shippingPostalCode String?
  shippingAddress1   String?
  shippingAddress2   String?

  paymentIntentId String    @unique // Prevent duplicate orders from the same payment

  items         OrderItem[]
  totalPrice    Float
  status        String    @default("pending") // pending, processing, shipped, delivered, cancelled

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
}

model OrderItem {
  id            String    @id @default(cuid())
  orderId       String
  order         Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  quantity      Int
  price         Float     // Effective price at the time of purchase (with B2B discounts applied)
  basePrice     Float?    // Original price before B2B discounts (null for non-discounted items)
  
  @@index([orderId])
  @@index([productId])
}

model Wishlist {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  
  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model Review {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  rating        Int       // 1-5
  title         String
  content       String
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
  @@index([productId])
}

model Cart {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  items         CartItem[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model CartItem {
  id            String    @id @default(cuid())
  cartId        String
  cart          Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  
  productId     String
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  quantity      Int       @default(1)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@unique([cartId, productId])
  @@index([cartId])
  @@index([productId])
}

// B2B Distributor pricing model
model DistributorPrice {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  distributorId   String
  distributor     User     @relation(fields: [distributorId], references: [id], onDelete: Cascade)
  customPrice     Float    // Base B2B price for this distributor
  discountTiers   Json?    // Quantity-based discount tiers: [{ minQty: 1, maxQty: 10, price: 80 }, ...]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([productId, distributorId])
  @@index([productId])
  @@index([distributorId])
}
